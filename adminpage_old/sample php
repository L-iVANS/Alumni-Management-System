<?php
    $serername="localhost";
    $db_username="root";
    $db_password="";
    $db_name="alumni_management_system";
    $conn=mysqli_connect($serername, $db_username, $db_password, $db_name);

    $alumni_id ="";
    $fname ="";
    $mname ="";
    $lname ="";

    if($_SERVER['REQUEST_METHOD'] == 'GET'){
        // Show the data of alumni
        if(!isset($_GET['id'])){
            header("location: ../alumni.php");
            exit;
        }
        $alumni_id = $_GET['id'];
        
        //read data from table alumni
        $sql = "SELECT * FROM alumni WHERE student_id=$alumni_id";
        $result = $conn->query($sql);
        $row = $result->fetch_assoc();

        if(!$row){
            header("location: ../alumni.php");
            exit;
        }
        // data from table alumni
        $fname = $row['fname'];
        $mname = $row['mname'];
        $lname = $row['lname'];
        

    }else{
        // POST method: update the data of alumni
        $alumni_id = $_POST['id'];
        $fname = $_POST['fname'];
        $mname = $_POST['mname'];
        $lname = $_POST['lname'];

        // for image
        $file = addslashes(file_get_contents($_FILES["image"]["tmp_name"]));

        do{

            $sql = "UPDATE alumni SET fname='$fname', mname='$mname', lname='$lname', picture='$file' WHERE student_id=$alumni_id";
            $result = $conn->query($sql);

            if(!$result){
                $errorMessage = "Invalid Query: " . $conn->error;
                break;
            }
            $successMessage = "Alumni added sucessfully";
                header("location: ../alumni.php");
                exit;

        }while(true);
    }

